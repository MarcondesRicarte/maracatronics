<?xml version="1.0" encoding="UTF-8"?>
<geometry>
    <!-- [mm] -->
    <ballRadius>21.5</ballRadius>
    <!-- [mm] -->
    <botRadius>90</botRadius>
    <!-- [mm] -->
    <botCenterToDribblerDist>84</botCenterToDribblerDist>
    <!-- Max speed during stoppage [m/s] -->
    <stopSpeed>1.0</stopSpeed>
    <field>
        <!-- x [mm] Teppich: 3600 -->
        <length>3500</length>
        <!-- y [mm] Teppich: 2750 -->
        <width>2600</width>
        <!-- [mm] -->
        <lineWidth>10</lineWidth>
        <!-- The border around the field -->
        <border>
            <widthL>100</widthL>
            <widthW>100</widthW>
        </border>
        <!-- The judge-area which encloses the field and inner border -->
        <judgesBorder>
            <widthL>100</widthL>
            <widthW>100</widthW>
        </judgesBorder>
        <!-- The goal dimensions -->
        <goal>
            <innerWidth>695</innerWidth>
            <innerDepth>180</innerDepth>
            <innerHeight>155</innerHeight>
        </goal>
        <!-- distance goal line - penalty mark [mm] -->
        <distanceToPenaltyMark>750</distanceToPenaltyMark>
        <!-- radius of the two, small quarter circles at the sides of the penalty 
			area. -->
        <distanceToPenaltyArea>810</distanceToPenaltyArea>
        <!-- the length of the short line of the penalty area, that is parallel 
			to the goal line -->
        <lengthOfPenaltyAreaFrontLine>350</lengthOfPenaltyAreaFrontLine>
        <!-- The radius of the center circle ("Mittelkreis") [mm] -->
        <centerCircleRadius>505</centerCircleRadius>
        <!-- The center ("Mittelpunkt") -->
        <center>0;0</center>
        <maintenancePosition>-100,2100</maintenancePosition>
        <!-- penalty line (bots must be behind goal line + penalty mark + penaltyLine 
			when a penalty kick is executed -->
        <distanceToPenaltyLine>400</distanceToPenaltyLine>
        <!-- distance between bot and ball (centers) that is needed during STOP 
			phase -->
        <botToBallDistanceStop>500</botToBallDistanceStop>
    </field>
</geometry>
